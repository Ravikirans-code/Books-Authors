<h2 class="page-header">Search Book</h2>
<form method="GET" action="/books">
    <div class="form-row">
        <div class="form-item">
            <label>Title</label>
            <input type="text" name="txtSearchBooks" value="<%= searchOptions.txtSearchBooks%>">
        </div>
    </div>
    <div class="form-row">
        <div class="form-item">
            <label>Published After</label>
            <input type="date" name="txtPublishedAfter" value="<%= searchOptions.txtPublishedAfter%>">
        </div>
        <div class="form-item">
            <label>Published Before</label>
            <input type="date" name="publishedBefore" value="<%= searchOptions.publishedBefore %>">
        </div>
    </div>

    <div class="form-row form-row-end">
        <button class="btn btn-primary" type="submit">Search</button>
    </div>

</form>
<br>
<%- include('../partials/bookGrid', { books: allBooks, large: true }) %>